<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_itinerary_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="5dp"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="Roma"
        />
    <TextView
        android:id="@+id/tv_itinerary_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="5dp"
        android:layout_margin="5dp"
        tools:text="20/11/2019 a 26/11/2019"
        />
    <ImageView
        android:id="@+id/iv_itinerary_item_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        tools:background="@android:drawable/ic_menu_report_image"
        android:contentDescription="@string/poster_description"/>
    <TextView
        android:id="@+id/tv_itinerary_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        tools:text="7 days"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/selected_attractions_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            tools:text="15 attractions selected "/>

        <Button
            android:id="@+id/btn_itinerary_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_gravity="center"
            android:text="@string/see_details"/>


    </LinearLayout>


</LinearLayout>


